{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@styles/*": ["src/styles/*"],
      "@components/*": ["src/components/*"],

      "@remote/*": ["src/remote/*"],
      "@mock/*": ["src/mock/*"],
      "@constants": ["src/constants/index"],
      "@constants/*": ["src/constants/*"],
      "@models/*": ["src/models/*"],
      "@utils/*": ["src/utils/*"],
      "@context/*": ["src/context/*"],
      "@hooks/*": ["src/hooks/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
